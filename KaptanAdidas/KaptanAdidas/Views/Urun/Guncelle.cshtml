@model KaptanAdidas.Models.Urun
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Guncelle</h2>
<br /><br /><br />
<div class="container">
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Guncelle", "Urun", new { id = Model.Id }, FormMethod.Post, new { enctype = "multipart/Form-data" }))
            {
                @*<form method="post" enctype="multipart/form-data" action="Urun/Guncelle/@Model.Id">*@
                <div class="form-group">
                    <label>Ad</label>
                    <input type="text" name="Ad" class="form-control" value="@Model.Ad" />
                </div>
                <div class="form-group">
                    <label>Acıklama</label>
                    <input type="text" name="Aciklama" class="form-control" value="@Model.Aciklama" />
                </div>
                <div class="form-group">
                    <label>Önceki Resim</label>
                    <img src="~/~Content/Image/@Model.Resim" width="80" height="80" />
                </div>
                <div class="form-group">
                    @Html.Label("Resim", new { @class = "control-label  col-md-2" })
                    <input type="file" name="File" />
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    <input type="text" name="Fiyat" class="form-control" value="@Model.Fiyat" />
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    <input type="text" name="Stok" class="form-control" value="@Model.Stok" />
                </div>
                <div class="form-group">
                    @Html.Label("Populer", new { @class = "control-label  col-md-2" })
                    @Html.EditorFor(x => x.Populer)
                </div>
                <div class="form-group">
                    <label>Kategori</label>
                    @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.ktgr, new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary">GUNCELLE</button>
                <a href="/Urun/Index">Urun Listesi</a>
            }
        </div>
    </div>
</div>