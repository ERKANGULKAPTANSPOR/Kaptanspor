@using KaptanAdidas.Models
@model List<Sepet>
@{
    ViewBag.Title = "HepsiniSatınAl";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>HepsiniSatınAl</h2>
<div class="container">
    <h2>Merhaba @Session["Ad"] @Session["Soyad"] Satın Alma Sayfasına Hoşgeldiniz.</h2>
</div>

<div class="container">
    @using (Html.BeginForm("HepsiniSatinAl2", "Satis", FormMethod.Post, new { @class = "container" }))
    {
        foreach (var item in Model)
        {
            <div class="form-group">
                <h5>ID:@Html.DisplayFor(X => item.Id)</h5>
            </div>

            <div class="form-group">
                <h5>Ürün Ad:@Html.DisplayFor(x => item.Urun.Ad)</h5>
            </div>

            <div class="form-group">
                <h5>Adet:@Html.DisplayFor(x => item.Adet)</h5>
            </div>

            <div class="form-group">
                <h5>Fiyat:@Html.DisplayFor(x => item.Fiyat)</h5>
            </div>

            <div class="form-group">
                <h5>Resim:<img src="~/Content/Image/@item.Urun.Resim" width="50" height="50" /></h5>
            </div>
          }
        <p  style="color:red; text-align:center">@ViewBag.Tutar</p>

        <div class="container">
            <div class="form-group" style="float:left">
                <button class="btn btn-success">ONAY</button>
            </div>

        <div style="float:right">
            <a href="/Sepet/Index" class="btn btn-danger">İptal</a>
        </div>
       </div>
    }
</div>

