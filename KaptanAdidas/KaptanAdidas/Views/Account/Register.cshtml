@using KaptanAdidas.Models
@model  List<Kullanici>
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container">
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="row">
        <div class="form-group col-md-3">
            <form method="post">
                <label>Ad</label>
                <input type="text" name="Ad" class="form-control" required />
                <br />
                <label>Soyad</label>
                <input type="text" name="Soyad" class="form-control" required />
                <br />
                <label>EMail</label>
                <input type="text" name="EMail" class="form-control" required />
                <br />
                <label>Kulanici Adi</label>
                <input type="text" name="KualliniciAd" class="form-control" required />
                <br />
                <label>Sifre</label>
                <input type="password" name="Sifre" class="form-control" required />
                <br />
                <label>TekrarSifre</label>
                <input type="password" name="SifreTekrar" class="form-control" required />
                <br />
                <label>Rol</label>
                <input type="text" name="Rol" class="form-control" required />
                <br />
                <button href="/Account/Register" class="btn btn-success">KAYDET</button>
            </form>
        </div>
        <div class="form-group col-md-9">
            <br />
            <br />
            <br />
            <h3>Kullanıcı Listesi</h3>
            <div class="table-responsive">
                <table class="table align-items-center table-flush">
                    <thead>
                        <tr>
                            <td>#</td>
                            <td>Ad</td>
                            <td>Soyad</td>
                            <td>Email</td>
                            <td>Sifre</td>
                            <td>SifreTekrar</td>
                            <td>Rol</td>
                            <td>İşlemler</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count > 0)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Ad</td>
                                    <td>@item.Soyad</td>
                                    <td>@item.EMail</td>
                                    <td>@item.Sifre</td>
                                    <td>@item.SifreTekrar</td>
                                    <td>@item.Rol</td>
                                    <td>
                                        <a class="btn btn-sm btn-info"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7">Kullanıcı Bulunmamaktadır.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
