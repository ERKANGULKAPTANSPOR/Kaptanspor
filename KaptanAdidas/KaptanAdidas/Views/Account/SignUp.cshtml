<body class="login-img3-body">
  
    <div class="container">
        @if (ViewData["message"] != null)
        {
            <div>@ViewData["message"]</div>
            <a href="/Account/Login" class="btn btn-warning btn-lg btn-block" type="submit">Giriş Sayfasına Dön</a>

        }
        else
        {
            <form class="login-form" method="post">
                <div class="login-wrap">
                    <p class="login-img"><i class="icon_lock_alt"></i></p>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_profile"></i></span>
                        <input type="text" name="Ad" class="form-control" placeholder="Ad" autofocus>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_profile"></i></span>
                        <input type="text" name="Soyad" class="form-control" placeholder="Soyad" autofocus>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_profile"></i></span>
                        <input type="email" name="EMail" class="form-control" placeholder="EMail" autofocus>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_profile"></i></span>
                        <input type="text" name="KullaniciAd" class="form-control" placeholder="Kullanıcı Adı" autofocus>
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                        <input type="password" name="Sifre" class="form-control" placeholder="Şifre Giriniz">
                    </div>
                    <input type="hidden" name="State" value="0">

                    <div class="input-group">
                        <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                        <input type="password" name="SifreTekrar" class="form-control" placeholder="Tekrar Şifre Giriniz">
                    </div>
                    <a class="pull-right" href="/Account/Login"> Zaten Hesabım Var</a>
                    <button href="/Account/SignUp" style="color:white; background-color:aqua" class="btn btn-info btn-lg btn-block" type="submit">KAYIT OL</button>
                </div>
            </form>
        }
        <div class="text-right">
            <div class="credits">
                <!--
              All the links in the footer should remain intact.
              You can delete the links only if you purchased the pro version.
              Licensing information: https://bootstrapmade.com/license/
              Purchase the pro version form: https://bootstrapmade.com/buy/?theme=NiceAdmin
            -->
                <a href="https://bootstrapmade.com/"></a>
            </div>
        </div>
    </div>
    
</body>

</html>

